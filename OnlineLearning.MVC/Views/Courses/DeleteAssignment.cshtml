@model OnlineLearning.Entity.Entities.Assignment

<h2>Delete Assignment</h2>
<p>Are you sure you want to delete this assignment?</p>

<div>
    <h4>@Model.Title</h4>
    <p>@Model.Description</p>
</div>

<form asp-action="DeleteAssignmentConfirmed" asp-route-assignmentId="@Model.Id" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="ManageAssignments" asp-route-courseId="@Model.CourseId" class="btn btn-secondary">Cancel</a>
</form>
