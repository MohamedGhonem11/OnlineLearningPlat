@model OnlineLearning.Service.ViewModels.CourseViewModel

@{
    ViewData["Title"] = "Course Details";
}

<div class="container mt-4">
    <div class="row">
        <!-- Course Image and Details -->
        <div class="col-12 col-md-6">
            @if (Model.Instructor.ProfilePicture != null && Model.Instructor.ProfilePicture.Length > 0)
            {
                <img src="data:image/jpg;base64,@Model.Instructor.ProfilePicture"
                     alt="@Model.Instructor.FullName"
                     class="img-fluid w-100 rounded" />
            }
            else
            {
                <img src="/images/avatar-male.jpg"
                     alt="Default Profile Picture"
                     class="img-fluid w-100 rounded" />
            }
        </div>

        <!-- Course Title and Details -->
        <div class="col-12 col-md-6 d-flex flex-column justify-content-between">
            <div>
                <h1 class="mb-3">@Model.Title</h1>
                <p class="h4 text-primary">@Model.StartDate.ToShortDateString() - @Model.EndDate.ToShortDateString()</p>
                <p class="h5 text-secondary">Instructor: @Model.Instructor.FullName</p>
                <p class="lead mt-3 text-muted">@Model.Description</p>
            </div>

            <!-- Action Buttons -->
            <div class="d-flex justify-content-center mt-4">
                <a asp-action="Index" class="btn btn-primary w-50">Back to List</a>
            </div>
        </div>
    </div>

    <!-- Additional Course Description/Details (Optional) -->
    <div class="row mt-5">
        <div class="col-12">
            <h2 class="mb-3">More About This Course</h2>
            <p class="lead text-muted">Here you can provide more details about the course, including objectives, syllabus, and any other information.</p>
        </div>
    </div>
</div>
